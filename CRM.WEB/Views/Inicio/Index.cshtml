@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm h-100 d-flex flex-column">
    <div class="card-body p-3 overflow-auto" style="min-height: 0; max-height: calc(100vh - 200px);">

        <!-- Título e introdução -->
        <div class="mb-4">
            <h4 class="fw-bold">Bem-vindo ao <span class="text-primary">CRM Web</span></h4>
            <p class="text-muted">Visão geral do sistema e seus indicadores principais.</p>
        </div>

        <!-- Indicadores principais -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-people-fill fs-1 text-primary"></i>
                        </div>
                        <div>
                            <h6 class="mb-1 text-muted">Clientes Ativos</h6>
                            <h3 class="mb-0 fw-bold">1.250</h3>
                            <small class="text-success">Atualizado hoje</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-box-seam fs-1 text-success"></i>
                        </div>
                        <div>
                            <h6 class="mb-1 text-muted">Produtos no Estoque</h6>
                            <h3 class="mb-0 fw-bold">3.764</h3>
                            <small class="text-success">Estoque atualizado</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-cart-check fs-1 text-warning"></i>
                        </div>
                        <div>
                            <h6 class="mb-1 text-muted">Pedidos do Dia</h6>
                            <h3 class="mb-0 fw-bold">128</h3>
                            <small class="text-warning">Inclui pendências</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Conteúdo principal -->
        <div class="d-flex flex-column flex-lg-row gap-4">
            <!-- Gráfico -->
            <div class="flex-grow-1">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Vendas por Mês</h5>
                        <canvas id="graficoVendas" height="250"></canvas>
                    </div>
                </div>
            </div>

            <!-- Atividades recentes -->
            <div style="width: 100%; max-width: 350px;">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Atividades Recentes</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Novo pedido cadastrado - <small class="text-muted">há 5 minutos</small></li>
                            <li class="list-group-item">Cliente "João Silva" atualizado - <small class="text-muted">há 10 minutos</small></li>
                            <li class="list-group-item">Produto "Mouse Gamer" adicionado - <small class="text-muted">há 30 minutos</small></li>
                            <li class="list-group-item">Backup diário realizado - <small class="text-muted">há 1 hora</small></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('graficoVendas').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun'],
                datasets: [{
                    label: 'Vendas',
                    data: [120, 190, 300, 500, 200, 300],
                    backgroundColor: 'rgba(13, 110, 253, 0.5)',
                    borderColor: 'rgba(13, 110, 253, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
