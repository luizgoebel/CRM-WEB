@using CRM.Web.Models
@model IEnumerable<ClienteViewModel>

@{
    ViewData["Title"] = "Clientes";
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="javascript:void(0);" class="btn btn-primary" onclick="abrirModalCliente(null, false)">
                <i class="bi bi-plus-circle me-1"></i> Novo Cliente
            </a>

            <div class="input-group w-auto">
                <input type="text"
                       id="searchInput"
                       class="form-control"
                       placeholder="Buscar..."
                       onkeyup="filtroTabelaCliente()" />
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle tabela-clientes" id="tabelaClientes">
                <thead class="table-secondary">
                    <tr>
                        <th style="width: 20%;">Nome</th>
                        <th style="width: 20%;">Email</th>
                        <th style="width: 25%;">Endereco</th>
                        <th style="width: 15%;">Telefone</th>
                        <th class="acao">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.Nome</td>
                            <td>@cliente.Email</td>
                            <td>@cliente.Endereco</td>
                            <td>@cliente.Telefone</td>
                            <td class="acao">
                                <button type="button"
                                        class="btn btn-warning btn-sm me-1"
                                        title="Editar"
                                        onclick="abrirModalCliente(@cliente.Id, false)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button type="button"
                                        class="btn btn-info btn-sm"
                                        title="Visualizar"
                                        onclick="abrirModalCliente(@cliente.Id, true)">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal genérico reutilizável -->
<div class="modal fade" id="clienteModal" tabindex="-1" aria-labelledby="clienteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="clienteModalLabel">Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body" id="clienteModalBody">
                <!-- conteúdo carregado via AJAX -->
            </div>
        </div>
    </div>
</div>
