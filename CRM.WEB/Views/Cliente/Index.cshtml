@using CRM.Web.Models
@model IEnumerable<ClienteViewModel>

@{
    ViewData["Title"] = "Clientes";
    var paginaAtual = ViewBag.PaginaAtual as int? ?? 1;
    var totalPaginas = ViewBag.TotalPaginas as int? ?? 1;

    int paginasPorGrupo = 5;
    int grupoAtual = (paginaAtual - 1) / paginasPorGrupo;
    int inicioGrupo = grupoAtual * paginasPorGrupo + 1;
    int fimGrupo = Math.Min(inicioGrupo + paginasPorGrupo - 1, totalPaginas);
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="javascript:void(0);" class="btn btn-primary" onclick="abrirModalCliente(null, false)">
                <i class="bi bi-plus-circle me-1"></i> Novo Cliente
            </a>

            <!-- Filtro tabela -->
            <filtro-tabela tabela-id="tabelaClientes" />
        </div>

        <div class="tabela-container d-flex flex-column">
            <div class="table-responsive flex-grow-1">
                <table class="table table-bordered table-hover align-middle tabela-clientes tabela-dados" id="tabelaClientes">
                    <thead class="table-secondary">
                        <tr>
                            <th style="width: 20%;">Nome</th>
                            <th style="width: 20%;">Email</th>
                            <th style="width: 25%;">Endereco</th>
                            <th style="width: 15%;">Telefone</th>
                            <th class="acao">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Nome</td>
                                <td>@cliente.Email</td>
                                <td>@cliente.Endereco</td>
                                <td>@cliente.Telefone</td>
                                <td class="acao">
                                    <button type="button"
                                            class="btn btn-warning btn-sm me-1"
                                            title="Editar"
                                            onclick="abrirModalCliente(@cliente.Id, false)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button type="button"
                                            class="btn btn-info btn-sm"
                                            title="Visualizar"
                                            onclick="abrirModalCliente(@cliente.Id, true)">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Paginação -->
        @await Html.PartialAsync("_Paginacao", (paginaAtual, totalPaginas))

    </div>
</div>

<!-- Modal genérico (idModal, titulo,bodyId) -->
@await Html.PartialAsync("_ModalGenerico", ("clienteModal", "Cliente", "clienteModalBody"))

