@model CRM.Web.Models.ClienteViewModel
@{
    bool somenteLeitura = ViewBag.SomenteLeitura ?? false;
}

<form id="formClienteModal" method="post" action="/Cliente/SalvarCliente" draggable="false">
    <input type="hidden" name="Id" value="@Model?.Id" />

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <label for="nome" class="form-label">Nome:</label>
                <input type="text" class="form-control" id="nome" name="Nome" value="@Model?.Nome" @(somenteLeitura ? "readonly" : "") />
            </div>

            <div class="mb-3">
                <label for="telefone" class="form-label">Telefone:</label>
                <input type="text" class="form-control" id="telefone" name="Telefone" value="@Model?.Telefone" @(somenteLeitura ? "readonly" : "") />
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email" name="Email" value="@Model?.Email" @(somenteLeitura ? "readonly" : "") />
            </div>

            <div class="mb-3">
                <label for="endereco" class="form-label">Endereço:</label>
                <input type="text" class="form-control" id="endereco" name="Endereco" value="@Model?.Endereco" @(somenteLeitura ? "readonly" : "") />
            </div>
        </div>
    </div>

    <!-- Botões fora da borda -->
    <div class="d-flex justify-content-end gap-2 mt-3">
        <button type="button" class="btn btn-sm btn-danger btn-igual" data-bs-dismiss="modal">Fechar</button>
        @if (!somenteLeitura)
        {
            <button type="button" class="btn btn-sm btn-success btn-igual" onclick="salvarCliente()">Salvar</button>
        }
    </div>
</form>
