@model (int paginaAtual, int totalPaginas)

@{
    int paginasPorGrupo = 5;
    int grupoAtual = (Model.paginaAtual - 1) / paginasPorGrupo;
    int inicioGrupo = grupoAtual * paginasPorGrupo + 1;
    int fimGrupo = Math.Min(inicioGrupo + paginasPorGrupo - 1, Model.totalPaginas);
}

<nav aria-label="Navegação de páginas" class="mt-3">
    <ul class="pagination justify-content-end">
        @if (Model.paginaAtual > 1)
        {
            <li class="page-item">
                <a class="page-link" href="?page=@(Model.paginaAtual - 1)" aria-label="Anterior">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }

        @for (int i = inicioGrupo; i <= fimGrupo; i++)
        {
            <li class="page-item @(Model.paginaAtual == i ? "active" : "")">
                <a class="page-link" href="?page=@i">@i</a>
            </li>
        }

        @if (fimGrupo < Model.totalPaginas)
        {
            <li class="page-item">
                <a class="page-link" href="?page=@(fimGrupo + 1)" aria-label="Próximo grupo">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>
