<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRM</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRM.WEB.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Botão fixo do menu -->
        <button class="btn btn-sm btn-dark position-fixed top-0 start-0 m-2 zindex-fixed d-flex align-items-center gap-2" id="menu-toggle">
            <i class="bi bi-list fs-5"></i>
            <span class="menu-label">Menu</span>
        </button>

        <!-- Sidebar -->
        <div class="bg-dark border-end" id="sidebar-wrapper">
            <div class="list-group list-group-flush mt-5 pt-2">
                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#cadastroSubmenu" role="button">
                    <i class="bi bi-card-list me-2"></i>Cadastro
                </a>
                <div class="collapse ps-3" id="cadastroSubmenu">
                    <a class="list-group-item list-group-item-action bg-dark text-white" asp-controller="Cliente" asp-action="Index">
                        <i class="bi bi-person-plus me-2"></i>Cliente
                    </a>
                    <a class="list-group-item list-group-item-action bg-dark text-white" asp-controller="Produto" asp-action="Index">
                        <i class="bi bi-box-seam me-2"></i>Produto
                    </a>
                    <a class="list-group-item list-group-item-action bg-dark text-white" href="#">
                        <i class="bi bi-receipt me-2"></i>Pedido
                    </a>
                </div>
                <a class="list-group-item list-group-item-action bg-dark text-white" asp-controller="Cliente" asp-action="Index">
                    <i class="bi bi-people me-2"></i>Clientes
                </a>
                <a class="list-group-item list-group-item-action bg-dark text-white" asp-controller="Produto" asp-action="Index">
                    <i class="bi bi-boxes me-2"></i>Produtos
                </a>
                <a class="list-group-item list-group-item-action bg-dark text-white" href="#">
                    <i class="bi bi-cart4 me-2"></i>Pedidos
                </a>
            </div>
        </div>

        <!-- Conteúdo principal -->
        <div id="page-content-wrapper">
            <main class="container-fluid mt-4">
                @RenderBody()
            </main>
        </div>
    </div>

    @await Html.PartialAsync("_MensagemPartial")
    @await Html.PartialAsync("_SpinnerPartial")
    @await Html.PartialAsync("_confirmacaoPartial")

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/utils/globais.js"></script>
    <script src="~/js/cliente/cliente.js"></script>
    <script src="~/js/produto/produto.js"></script>

    <script>
        function atualizarTextoBotaoMenu() {
            const aberto = !document.getElementById("wrapper").classList.contains("toggled");
            document.querySelector(".menu-label").innerText = aberto ? "Menu" : "";
        }

        $("#menu-toggle").click(function () {
            $("#wrapper").toggleClass("toggled");
            atualizarTextoBotaoMenu();
        });

        $(document).ready(atualizarTextoBotaoMenu);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
