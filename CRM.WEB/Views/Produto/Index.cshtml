@using CRM.Web.Models
@model IEnumerable<ProdutoViewModel>

@{
    ViewData["Title"] = "Produtos";
    var paginaAtual = ViewBag.PaginaAtual as int? ?? 1;
    var totalPaginas = ViewBag.TotalPaginas as int? ?? 1;

    int paginasPorGrupo = 5;
    int grupoAtual = (paginaAtual - 1) / paginasPorGrupo;
    int inicioGrupo = grupoAtual * paginasPorGrupo + 1;
    int fimGrupo = Math.Min(inicioGrupo + paginasPorGrupo - 1, totalPaginas);
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="javascript:void(0);" class="btn btn-primary" onclick="abrirModalProduto(null, false)">
                <i class="bi bi-plus-circle me-1"></i> Novo Produto
            </a>

            <div class="input-group w-auto">
                <input type="text"
                       id="searchProdutoInput"
                       class="form-control"
                       placeholder="Buscar..."
                       onkeyup="filtroTabelaProduto()" />
            </div>
        </div>

        <div class="tabela-container d-flex flex-column">
            <div class="table-responsive flex-grow-1">
                <table class="table table-bordered table-hover align-middle tabela-produtos tabela-dados" id="tabelaProdutos">
                    <thead class="table-secondary">
                        <tr>
                            <th style="display: none;">ID</th>
                            <th style="width: 50%;">Nome</th>
                            <th style="width: 25%;">Preço</th>
                            <th class="acao">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var produto in Model)
                        {
                            <tr>
                                <td style="display: none;">@produto.Id</td>
                                <td>@produto.Nome</td>
                                <td>R$ @produto.Preco?.ToString("F2")</td>
                                <td class="acao">
                                    <button type="button"
                                            class="btn btn-warning btn-sm me-1"
                                            title="Editar"
                                            onclick="abrirModalProduto(@produto.Id, false)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button type="button"
                                            class="btn btn-info btn-sm me-1"
                                            title="Visualizar"
                                            onclick="abrirModalProduto(@produto.Id, true)">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button type="button"
                                            class="btn btn-danger btn-sm"
                                            title="Excluir"
                                            onclick="excluirProduto(@produto.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Paginação -->
        <nav aria-label="Navegação de páginas" class="mt-3">
            <ul class="pagination justify-content-end">
                @if (paginaAtual > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(paginaAtual - 1)" aria-label="Anterior">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }

                @for (int i = inicioGrupo; i <= fimGrupo; i++)
                {
                    <li class="page-item @(paginaAtual == i ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }

                @if (fimGrupo < totalPaginas)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(fimGrupo + 1)" aria-label="Próximo grupo">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

<!-- Modal genérico reutilizável -->
<div class="modal fade" id="produtoModal" tabindex="-1" aria-labelledby="produtoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="produtoModalLabel">Produto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body" id="produtoModalBody">
                <!-- conteúdo carregado via AJAX -->
            </div>
        </div>
    </div>
</div>
