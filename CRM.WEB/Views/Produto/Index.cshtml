@using CRM.Web.Models
@using CRM.Web.TagHelpers
@model ProdutoIndexViewModel

@{
    ViewData["Title"] = "Produtos";
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="javascript:void(0);" class="btn btn-primary" onclick="abrirModalProduto(null, false)">
                <i class="bi bi-plus-circle me-1"></i> Novo Produto
            </a>

            <!-- Filtro tabela -->
            <filtro-tabela tabela-id="tabelaProdutos" controller="produto" placeholder="Buscar produto..." />
        </div>

        <div class="tabela-container d-flex flex-column">
            <div class="table-responsive flex-grow-1">
                <table class="table table-bordered table-hover align-middle tabela-produtos tabela-dados" id="tabelaProdutos">
                    <thead class="table-secondary">
                        <tr>
                            <th style="display: none;">ID</th>
                            <th style="width: 50%;">Nome</th>
                            <th style="width: 25%;">Preço</th>
                            <th class="acao">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var produto in Model.Itens)
                        {
                            <tr>
                                <td style="display: none;">@produto.Id</td>
                                <td>@produto.Nome</td>
                                <td>R$ @produto.Preco?.ToString("F2")</td>
                                <td class="acao">
                                    <button type="button"
                                            class="btn btn-warning btn-sm me-1"
                                            title="Editar"
                                            onclick="abrirModalProduto(@produto.Id, false)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button type="button"
                                            class="btn btn-info btn-sm me-1"
                                            title="Visualizar"
                                            onclick="abrirModalProduto(@produto.Id, true)">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button type="button"
                                            class="btn btn-danger btn-sm"
                                            title="Excluir"
                                            onclick="excluirProduto(@produto.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Paginação -->
        <nav id="paginacao" class="mt-3"></nav>

        <div id="dadosPaginacao"
             data-pagina-atual="@Model.Paginacao.PaginaAtual"
             data-total-paginas="@Model.Paginacao.TotalPaginas"
             data-controller="produto"
             data-filtro="">
        </div>

    </div>
</div>