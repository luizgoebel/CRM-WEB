@model (string Id, string Titulo, string BodyId)

<!-- Modal genérico reutilizável -->
<div class="modal fade" id="@Model.Id" tabindex="-1" aria-labelledby="@Model.Id + 'Label'" aria-hidden="true" style="position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; overflow: hidden;">
    <div class="modal-dialog modal-lg modal-dialog-centered" style="height: 100vh; display: flex; align-items: center;">
        <div class="modal-content" style="width: 100%;">
            <div class="modal-header">
                <h5 class="modal-title" id="@Model.Id + 'Label'">@Model.Titulo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body" id="@Model.BodyId">
                <!-- conteúdo carregado via AJAX -->
            </div>
        </div>
    </div>
</div>
